<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.tarea_pdf.HelloController">
    <left>
        <VBox spacing="20">
            <padding>
                <Insets top="30" left="20"/>
            </padding>
            <HBox spacing="40">
                <Button fx:id="csv_button" text="Seleccionar CSV">

                </Button>
                <Button fx:id="pdf_button" text="Exportar a PDF"/>

                <Button fx:id="help_button" text="Ayuda"/>
            </HBox>
            <HBox spacing="20">
                <TextField fx:id="txt_name" text="Nombre contiene"/>
                <ComboBox fx:id="cbCriterio" promptText="Ciudad"/>
                <Button fx:id="changes_button" text="Aplicar Filtros"/>
            </HBox>

            <TableView fx:id="tabla" prefHeight="300" prefWidth="400">
                <columns>
                    <TableColumn fx:id="colNombre" text="Nombre" />
                    <TableColumn fx:id="colEmail" text="Email" />
                    <TableColumn fx:id="colCiudad" text="Ciudad" />
                </columns>
            </TableView>
            <HBox spacing="1">
                <padding>
                    <Insets bottom="30"/>
                </padding>
                <Label text="Total clientes: "/>
                <Label fx:id="total" text="0"/>
            </HBox>
        </VBox>
    </left>
    <right>
        <StackPane>
            <padding>
                <Insets right="20" left="20"/>
            </padding>
            <BarChart fx:id="graficoBarras" prefHeight="300.0" prefWidth="400.0">
                <xAxis>
                    <CategoryAxis label="Ciudades" side="BOTTOM" />
                </xAxis>
                <yAxis>
                    <NumberAxis label="Cantidad de Clientes" side="LEFT" />
                </yAxis>
            </BarChart>
            <PieChart fx:id="graficoPastel" visible="false" prefHeight="300.0" prefWidth="400.0" title="DistribuciÃ³n por Ciudad"/>
        </StackPane>
    </right>
    <bottom>
        <HBox spacing="10">
            <Label text="Tipo de Diagrama:"/>
            <RadioButton fx:id="rbBarras" text="Barras" selected="true"/>
            <RadioButton fx:id="rbPastel" text="Pastel"/>
        </HBox>
    </bottom>
</BorderPane>
